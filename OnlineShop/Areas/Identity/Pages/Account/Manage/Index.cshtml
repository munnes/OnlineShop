@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
}

<h4>@ViewData["Title"]</h4>
@Html.Partial("_StatusMessage", Model.StatusMessage)
<div class="row">
    <div class="col-md-12 col-sm-12 col-lg-10" style="margin-top:10px">
        <form id="profile-form" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.FullName"></label>
                <input asp-for="Input.FullName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                @* disabled clear data  *@
                <input asp-for="Input.Email" class="form-control" readonly />
            </div>

            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger">@TempData["Phone"]</span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Location"></label>
                @Html.TextAreaFor(model => model.Input.Location, new { @class = "form-control" })
            <span asp-validation-for="Input.Location" class="text-danger">@TempData["Loc"]</span>

            </div>
            <button type="submit" class="btn btn-info">Save</button>
        </form>
    </div>
</div>
@*return Redirect(Request.UrlReferrer.ToString());*@
@*@Html.ActionLink("Back", "BackAction", new { @class = "btn btn-info fas fa-plus-circle" })*@

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
