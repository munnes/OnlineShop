@using Microsoft.AspNetCore.Identity
@using OnlineShop.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/Index", new { area = "" })" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right navbar navbar-dark bg-dark" >
           
            <li>

                <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" class="nav-link" style="color:white">
                    <i class="fas fa-user"></i>
                Hello @UserManager.GetUserAsync(User).Result.FullName!</a>
            </li>
            <li>
                <button type="submit" class=" nav-link btn btn-link navbar-btn navbar-link" style="color:white">Logout</button>
            </li>
        </ul>
    </form>
}
else
{
<ul class="nav navbar-nav navbar-right">
    <li><a asp-area="Identity" asp-page="/Account/Login" class="nav-link" style="color:white"><i class="fas fa-user"></i> Login</a> </li>
   
    <li><a asp-area="Identity" asp-page="/Account/Register" class="nav-link" style="color:white">Register</a></li>

</ul>
}
