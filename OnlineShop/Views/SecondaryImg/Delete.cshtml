@model OnlineShop.ViewModel.SecondaryImgView

<h3 class="text-danger">Are you sure you want to delete this?</h3>
<div>
    <h2>Secondary Image</h2>
    <h5>Delete Secondary Image</h5>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Category
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CatName)
        </dd>
        <dt>
            Product
        </dt>
        <dd>
            @Html.DisplayFor(model => model.PrdName)
        </dd>
        <dt>
            Secondary Picture
        </dt>
        <dd>

            @if (Model.SecPic != null)
            {<img src="~/uploads/secondryImg/@Model.SecPic" style="height: 300px; margin-bottom:5px" class="img-thumbnail">
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SecPic" class="form-control" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Back to List</a>
    </form>
</div>
