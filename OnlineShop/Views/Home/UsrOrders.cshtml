@model IEnumerable<OnlineShop.ViewModel.UsrTrans>

@{
    ViewData["Title"] = "UsrOrders";
}
<h2>Open Orders</h2>
<hr/>

<link href="~/ProgressStyle.css" rel="stylesheet" />
<div class="row"  >
    <div class="col col-lg-12 col-md-12 col-sm-12  text-center " style=" color:#eb0973; margin-top:10px">
        <div class="card" style="z-index: -1;">
            <h2 class="card-header" style="color:#0081b4;">Orders</h2>
            <div class="card-body ">
@if (Model.Count() != 0)
{    @foreach (var item in Model)
{
                    <div class="row" style="align-items: center; display:flex;">

                        <div class="col-sm-12 col-md-2 col-lg-2">
                            <img src="~/uploads/@item.Pic" style="width: 150px; margin-bottom:5px" class="img-thumbnail">
                        </div>
                        <div class="col-sm-12 col-md-3 col-lg-3 text-left">

                            <h5 class="card-title ">
                                <span style="color:#0081b4">@item.PrdName</span>
                            </h5>
                            <div>Order#: @Html.DisplayFor(modelItem => item.OrdId) </div>
                            <div>Qty: @Html.DisplayFor(modelItem => item.Qty) </div>
                            <div>Price: @Html.DisplayFor(modelItem => item.Price) AED</div>

                        </div>

                        <div class="col-sm-12 col-md-7 col-lg-7 ">
                            <div class="container">
                                <ul class="progressbar">
                                    @if (item.OrdStat == 1)
                                    {
                                        <li class="activeP">Pending</li>
                                        <li>Send</li>
                                        <li>Expected date: @Html.DisplayFor(modelItem => item.ExpDate)</li>
                                    }
                                    else if (item.OrdStat == 2)
                                    {
                                        <li class="activeS1">Pending</li>
                                        <li class="activeS2">Send</li>
                                        <li class="activeS3" style="color:#e5352b">Expected date: @Html.DisplayFor(modelItem => item.ExpDate)</li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                    <hr />

}
}
else{
    <h2> You don't have any pending order</h2>
                }

            </div>
        </div>
    </div>

</div>
