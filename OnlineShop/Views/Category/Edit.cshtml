@model OnlineShop.Models.Category

@{
    ViewData["Title"] = "Edit";
}

<h2>Category</h2>
<h5>Edit</h5>
<hr />
<script src="~/ckeditor_4.15.0_standard/ckeditor.js"></script>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CatId" />
            <div class="form-group">
                <label asp-for="CatName" class="control-label"></label>
                <input asp-for="CatName" class="form-control" />
                <span asp-validation-for="CatName" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.mainDesc, htmlAttributes: new { @class = "control-label" })
                @Html.TextAreaFor(model => model.mainDesc, new { htmlAttributes = new { @class = "form-control", @id = "Description" } })
                @Html.ValidationMessageFor(model => model.mainDesc, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class=" btn btn-info">Back to List</a>
</div>
<script type="text/javascript">CKEDITOR.replace('mainDesc');</script>




